<ResourceDictionary 
    x:Class="DevExpress.TestRunner.RootResourceDictionary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:testRunner="using:DevExpress.TestRunner">

    <Style TargetType="testRunner:RootControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="testRunner:RootControl">
                    <TextBox Text="{x:Bind Path=Content, Mode=OneWay}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
